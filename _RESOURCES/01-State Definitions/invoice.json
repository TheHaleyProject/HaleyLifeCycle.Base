{
  "definition": {
    "name": "InvoiceProcessingState",
    "version": "2.0",
    "description": "Pure state definition for Invoice Processing lifecycle"
  },
  "states": [
    { "name": "Created", "is_initial": true, "category": "system" },
    { "name": "Sent", "category": "business" },
    { "name": "Paid", "category": "business" },
    { "name": "Overdue", "category": "business" },
    { "name": "Closed", "is_final": true, "category": "system" }
  ],
  "transitions": [
    { "from": "Created", "event": "Send", "to": "Sent" },
    { "from": "Sent", "event": "MarkPaid", "to": "Paid" },
    { "from": "Sent", "event": "MarkOverdue", "to": "Overdue" },
    { "from": "Paid", "event": "Close", "to": "Closed" },
    { "from": "Overdue", "event": "Close", "to": "Closed" }
  ]
}
